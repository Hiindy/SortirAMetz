<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cindy.sortirametz.Vue.Vue.BDD.AjoutBDD">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom : "
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Nom : " />

        <EditText
            android:id="@+id/modifNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude : "
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Latitude : " />

        <EditText
            android:id="@+id/modifLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude : "
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Longitude : " />

        <EditText
            android:id="@+id/modifLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse : "
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Adresse : " />

        <EditText
            android:id="@+id/modifAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catégorie : "
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Catégorie : " />

        <EditText
            android:id="@+id/modifCategorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Résumé : "
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Résumé : " />

        <EditText
            android:id="@+id/modifResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_modifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier" />

        <Button
            android:id="@+id/btn_supprimer"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supprimer"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="484dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
